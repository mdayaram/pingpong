<h1>Listing matches</h1>

<table cellpadding="10" cellspacing="10">
  <tr>
    <th>Round</th>
    <th>Team1</th>
    <th>Team2</th>
    <th>Schedule</th>
    <th>Winner</th>
    <th>Winner Next</th>
    <th>Loser Next</th>
    <th>Bracket</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @matches.each do |match| %>
  <tr>
    <td><%= match.round %></td>
		<td><%= match.left_team.blank? ? "Unknown" : match.left_team.members %></td>
		<td><%= match.right_team.blank? ? "Unknown" : match.right_team.members %></td>
    <td><%= match.schedule %></td>
    <td><%= match.winner %></td>
    <td><%= match.winner_next %></td>
    <td><%= match.loser_next %></td>
    <td><%= match.bracket %></td>
		<% if admin_signed_in? %>
	  <td><%= link_to 'Show', match%></td>
	  <td><%= link_to 'Edit', edit_match_path(match)%></td>
	  <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' }%></td>
		<% else %>
		<td></td>
		<td></td>
		<td></td>
		<% end %>
  </tr>
<% end %>
</table>

<br />

<% if admin_signed_in? %>
	<%= link_to 'New Match', new_match_path %>
<% end %>
